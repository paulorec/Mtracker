<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="call-hierarchy-exporter.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="com.paulo.call_hierarchy_exporter.actions.About"
               tooltip="Hello, Eclipse world"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="com.paulo.call_hierarchy_exporter.actions.About">
         </action>
      </actionSet>
   </extension>
   
  <extension 
       point="org.eclipse.ui.exportWizards"> 
      <wizard 
         id="com.paulo.call_hierarchy_exporter.ExportWizard" 
         name="XYZ Web Exporter" 
         class="com.paulo.call_hierarchy_exporter.ExportWizard" 
         icon="./icons/import1.gif"> 
         <description> 
            A simple engine that exports methods call hierarchy 
         </description> 
         <selection class="org.eclipse.core.resources.IProject"/> 
      </wizard> 
   </extension> 

</plugin>
